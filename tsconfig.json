{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2021"],
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "composite": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "useUnknownInCatchVariables": false,
    "outDir": "dist",
    "declarationDir": "dist/@types",
    "rootDir": "src"
  },
  "include": ["src"]
}
